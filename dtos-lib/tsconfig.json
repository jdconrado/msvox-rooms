{
  "compilerOptions": {
    "target": "es2020",            // Compile to ES2020
    "module": "commonjs",          // Use commonjs module system, suitable for Node.js environments
    "declaration": true,           // Generate corresponding '.d.ts' file
    "outDir": "./dist",            // Redirect output structure to the 'dist' folder
    "rootDir": "./src",            // Specify the root folder containing the source files
    "strict": true,                // Enable all strict type-checking options
    "esModuleInterop": true,       // Enables compatibility with Babel-imported modules
    "skipLibCheck": true,          // Skip type checking of all declaration files (*.d.ts)
    "forceConsistentCasingInFileNames": false,
    "resolveJsonModule": true,     // Include modules imported with '.json' extensions
    "types": ["node"],             // Load types for Node.js
    "moduleResolution": "node",     // Use Node.js style module resolution,
    "experimentalDecorators": true, // Enable support for experimental decorators,
    "emitDecoratorMetadata": true,  // Emit design-type metadata for decorated declarations in source files
    "allowSyntheticDefaultImports": true, // Allow default imports from modules with no default export,
    "strictNullChecks": false,
    "noImplicitAny": false,
  },
  "include": [
    "src/**/*.ts"                  // Include all TypeScript files in the 'src' directory
  ],
  "exclude": [
    "node_modules",                // Exclude the node_modules directory
    "**/*.spec.ts"                 // Exclude test files
  ]
}
